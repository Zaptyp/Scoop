<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/no_crash_icon_size"
        android:layout_height="@dimen/no_crash_icon_size"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_bug_report" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/no_crash_item_spacing"
        android:gravity="center_horizontal"
        android:text="@string/no_items"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/no_crash_text_size"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/no_crash_item_spacing"
        android:gravity="center_horizontal"
        android:text="@string/make_crash"
        android:textColor="?android:textColorTertiary" />

</LinearLayout>
